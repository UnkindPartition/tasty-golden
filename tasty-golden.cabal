  location: git://github.com/feuerbach/tasty-golden.git

Source-repository this
  type:     git
  location: git://github.com/feuerbach/tasty-golden.git
  tag:      v1.2

library
  exposed-modules:     Test.Golden
                       Test.Golden.Advanced
                       Test.Golden.Console
                       Test.Golden.Manage
  other-modules:
                       Test.Golden.Internal
  build-depends:
    base ==4.*,
    tasty,
    bytestring,
    process,
    mtl,
    optparse-applicative
